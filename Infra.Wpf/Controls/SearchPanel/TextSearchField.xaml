<UserControl x:Class="Infra.Wpf.Controls.TextSearchField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:Infra.Wpf.Converters"
             xmlns:local="clr-namespace:Infra.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="searchfield_Loaded"
             Name="searchfield">
    <UserControl.Resources>
        <converter:VisibilityToBoolConverter x:Key="converter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
       
        <local:CustomComboBox  VerticalContentAlignment="Center"  Margin="0,0,5,0" EnumType="{x:Type local:StringOperator}"
                             Visibility="{Binding OpertatorVisible, ElementName=searchfield,Converter={StaticResource converter}}"
                             SelectedItem="{Binding Operator,ElementName=searchfield}"/>
        <local:CustomTextBox Grid.Column="1" VerticalContentAlignment="Center" Text="{Binding FilterText,ElementName=searchfield}"/>
    </Grid>
</UserControl>
