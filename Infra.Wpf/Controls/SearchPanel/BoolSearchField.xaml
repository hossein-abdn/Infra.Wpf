<UserControl x:Class="Infra.Wpf.Controls.BoolSearchField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:Infra.Wpf.Converters;assembly=Infra.Wpf"
             xmlns:local="clr-namespace:Infra.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="searchfield">

    <Grid>
        <local:CustomCheckBox IsChecked="{Binding FilterValue,ElementName=searchfield}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
