<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TestControls"
    xmlns:ctl="http://Infra.Wpf"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    x:Class="TestControls.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>

    <i:Interaction.Behaviors>
        <ctl:EventToCommand EventName="Loaded" Command="{Binding LoadedEventCommand}"/>
    </i:Interaction.Behaviors>

    <DockPanel>
        <ctl:Billboard DockPanel.Dock="Top" FlowDirection="RightToLeft" FontSize="16"/>
        <Button Content="Person" Command="{Binding PersonListViewCommand}" DockPanel.Dock="Top"/>
        <Button Content="Test" DockPanel.Dock="Top" Click="Button_Click"/>
        <Frame NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
