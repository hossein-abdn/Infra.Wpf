<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TestControls"
    xmlns:data="clr-namespace:DataAccess;assembly=DataAccess"
    xmlns:ctl="clr-namespace:Infra.Wpf.Controls;assembly=Infra.Wpf"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="TestControls.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="300" Width="500"
    FontFamily="IRANSans"
    Name="wnd">
    <Window.Resources>
        <local:ParentViewModel x:Key="parentVM"/>
    </Window.Resources>
    <Window.DataContext>
        <local:ViewModel/>
        <!--<StaticResource ResourceKey="parentVM"/>-->
    </Window.DataContext>

    <!--DataContext="{x:Static local:MainWindow.GetDataModel}">-->
    <Grid>
        <Button Content="ok" VerticalAlignment="Center"/>

        <Popup IsOpen="True">
            <Popup.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="Black"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Height" Value="1"/>
                </Style>
                <Style TargetType="Image">
                    <Setter Property="Source">
                        <Setter.Value>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <GeometryDrawing Brush="Black" Geometry="M 0,0 L 100,100 L 0,200  Z"/>
                                </DrawingImage.Drawing>
                            </DrawingImage>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="Margin" Value="0,0,5,0"/>
                </Style>
            </Popup.Resources>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Background="White">
                <StackPanel>
                    <Grid Margin="0,2,0,0">
                        <TextBlock Text="امروز"/>
                        <Button Content="+" HorizontalAlignment="Left"/>
                        <Button Content="-" HorizontalAlignment="Right"/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="هفته جاری"/>
                        <Button Content="+" HorizontalAlignment="Left"/>
                        <Button Content="-" HorizontalAlignment="Right"/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="ماه جاری"/>
                        <Button Content="+" HorizontalAlignment="Left"/>
                        <Button Content="-" HorizontalAlignment="Right"/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="سال جاری"/>
                        <Button Content="+" HorizontalAlignment="Left"/>
                        <Button Content="-" HorizontalAlignment="Right"/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="ماه"/>
                        <Image/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="فصل"/>
                        <Image/>
                    </Grid>
                    <Rectangle/>
                    <Grid>
                        <TextBlock Text="نیم سال"/>
                        <Image/>
                    </Grid>

                </StackPanel>
            </Border>
        </Popup>
        <Popup IsOpen="True">
            <Popup.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="Black"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Height" Value="1"/>
                </Style>
            </Popup.Resources>

            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Background="White">
                <StackPanel>
                    <TextBlock Text="فروردین"/>
                    <Rectangle/>
                    <TextBlock Text="اردیبهشت"/>
                    <Rectangle/>
                    <TextBlock Text="خرداد"/>
                    <Rectangle/>
                    <TextBlock Text="تیر"/>
                    <Rectangle/>
                    <TextBlock Text="مرداد"/>
                    <Rectangle/>
                    <TextBlock Text="شهریور"/>
                    <Rectangle/>
                    <TextBlock Text="مهر"/>
                    <Rectangle/>
                    <TextBlock Text="آبان"/>
                    <Rectangle/>
                    <TextBlock Text="آذر"/>
                    <Rectangle/>
                    <TextBlock Text="دی"/>
                    <Rectangle/>
                    <TextBlock Text="بهمن"/>
                    <Rectangle/>
                    <TextBlock Text="اسفند"/>
                </StackPanel>
            </Border>
        </Popup>

        <Popup IsOpen="True">
            <Popup.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="LightGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="Black"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="Height" Value="1"/>
                </Style>
            </Popup.Resources>

            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Background="White">
                <StackPanel>
                    <TextBlock Text="بهار"/>
