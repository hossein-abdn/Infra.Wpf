<Window x:Class="TestControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestControls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ctl="http://Infra.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300"
        Loaded="Window_Loaded">

    <Grid FlowDirection="RightToLeft" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="Button_Click" Content="ok" Command="{Binding SubmitCommand}" />
        <ctl:PersianDatePicker x:Name="field1" Grid.Row="1" SelectedDate="{Binding Model.CreateDate}" FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}" />
        <ctl:CustomTextBox Grid.Row="2"/>
    </Grid>
</Window>
