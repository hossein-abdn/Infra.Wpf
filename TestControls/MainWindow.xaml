<Window x:Class="TestControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestControls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ctl="http://Infra.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300"
        Loaded="Window_Loaded">

    <Grid FlowDirection="RightToLeft" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ctl:SearchPanel RowMargin="5" ColumnMargin="5" SearchCommand="{Binding SubmitCommand}" SearchPhrase="{Binding SearchPhrase,Mode=OneWayToSource}">
            <ctl:TimeField FilterField="CreateTime" Format="TimeSpan"/>
        </ctl:SearchPanel>

        <TextBlock Text="{Binding Model.Time}" Grid.Row="1"/>
    </Grid>
</Window>
