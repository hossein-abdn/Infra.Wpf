<Window x:Class="TestControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestControls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:ctl="http://Infra.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    
    <Grid FlowDirection="RightToLeft" FocusManager.FocusedElement="{Binding ElementName=field4}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ctl:EditViewPanel FontSize="12" FontWeight="Normal" ColumnMargin="20" RowMargin="10" >
            <ctl:EditViewPanel.EditFields>
                <ctl:TextField Text="{Binding Model.Name}"/>
            </ctl:EditViewPanel.EditFields>
        </ctl:EditViewPanel>
    </Grid>
</Window>
