<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TestControls"
    xmlns:ctl="clr-namespace:Infra.Wpf.Controls;assembly=Infra.Wpf"
    x:Class="TestControls.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="500" Width="650"
    FontFamily="IRANSans"
    x:Name="wnd">
    <Window.DataContext>
        <local:ParentViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:ViewModel x:Key="vm"/>
    </Window.Resources>

    <DockPanel FlowDirection="RightToLeft">
        <ctl:SearchPanel DockPanel.Dock="Top" IsExpanded="True" SearchCommand="{Binding GetParentsCommand}" ColumnMargin="5" RowMargin="3" Stretch="True">
            <ctl:ComboField Title="وضعیت" FilterField="StudentId" ItemsSource="{Binding StudentList}" DisplayMemberPath="LastName" TargetColumn="StudentId"/>
            <ctl:MultiSelectField Title="دانش آموز" FilterField="StudentId" ItemsSource="{Binding StudentList}" DisplayMemberPath="LastName" TargetColumn="StudentId"/>
            <ctl:TextField Title="تست" OpertatorVisible="False"/>
            <ctl:BoolField Title="تست"/>
            <ctl:DateField Title="تاریخ" OpertatorVisible="False" SuggestionVisible="False"/>
            <ctl:LookupField Title="دانش آموز"/>
            <ctl:NumericField Title="عدد" OpertatorVisible="False" ShowButtons="True"/>

        </ctl:SearchPanel>
        <ctl:GridWrapPanel>
            <TextBlock Text="وضعیت"/>
            <ctl:CustomComboBox/>
            <TextBlock Text="دانش آموز"/>
            <ctl:MultiSelect ItemsSource="{Binding StudentList}" DisplayMemberPath="LastName"/>
        </ctl:GridWrapPanel>
    </DockPanel>
</Window>
