<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestControls"
        xmlns:model ="clr-namespace:DataAccess.Models;assembly=DataAccess"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:enums="clr-namespace:DataAccess.Enums;assembly=DataAccess"
        xmlns:ctl="http://Infra.Wpf"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="TestControls.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" 
        Width="400"
        FontFamily="IRANSans">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox>
            <GroupBox.Style>
                <Style TargetType="{x:Type GroupBox}">
                    <Setter Property="FlowDirection" Value="RightToLeft"/>
                    <Setter Property="Header" Value="{Binding ViewTitle}"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </GroupBox.Style>
            <ctl:NumericBox x:Name="numeric"  Format="n2" FontWeight="Normal" AllowNull="False"/>
        </GroupBox>

        <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" Content="click" Click="Button_Click"/>
        <!--<TextBox Name="txt"/>-->
    </Grid>
</Window>
